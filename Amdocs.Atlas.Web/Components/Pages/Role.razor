@page "/Role"
@using System.Net.Http.Json
@using Amdocs.Atlas.Core.DTOs
@inject HttpClient Http

<h3>Role</h3>

@if (!string.IsNullOrWhiteSpace(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}

@if (isLoading)
{
    <p><em>Loading...</em></p>
}
else
{
    <EditForm Model="newCustomer" OnValidSubmit="CreateCustomerAsync">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <label class="form-label">Name</label>
            <InputText class="form-control" @bind-Value="newCustomer.Name" />
        </div>

        <button type="submit" class="btn btn-primary">Add Customer</button>
    </EditForm>

    <hr />

    @if (Roles.Count == 0)
    {
        <p>No Role found.</p>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 60%">Name</th>
                    <th style="width: 40%">Actions</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var customer in Roles)
            {
                <tr>
                    <td>
                        @if (editCustomer?.Id == customer.Id)
                        {
                            <InputText class="form-control" @bind-Value="editCustomer!.Name" />
                        }
                        else
                        {
                            @customer.Name
                        }
                    </td>
                    <td>
                        @if (editCustomer?.Id == customer.Id)
                        {
                            <button class="btn btn-sm btn-success me-2" @onclick="() => SaveEditAsync(customer.Id)">Save</button>
                            <button class="btn btn-sm btn-secondary" @onclick="CancelEdit">Cancel</button>
                        }
                        else
                        {
                            <button class="btn btn-sm btn-outline-primary me-2" @onclick="() => BeginEdit(customer)">Edit</button>
                            <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteCustomerAsync(customer.Id)">Delete</button>
                        }
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
}

@code {
    private List<CustomerDto> Roles = [];
    private CustomerDto newCustomer = new();
    private CustomerDto? editCustomer;
    private bool isLoading = true;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadRoleAsync();
    }

    private async Task LoadRoleAsync()
    {
        try
        {
            isLoading = true;
            errorMessage = null;

            var result = await Http.GetFromJsonAsync<List<CustomerDto>>("api/Role");
            Roles = (result ?? []).OrderBy(c => c.Name).ToList();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading Role: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task CreateCustomerAsync()
    {
        if (string.IsNullOrWhiteSpace(newCustomer.Name))
        {
            errorMessage = "Name is required.";
            return;
        }

        try
        {
            errorMessage = null;

            var response = await Http.PostAsJsonAsync("api/Role", newCustomer);
            response.EnsureSuccessStatusCode();

            var created = await response.Content.ReadFromJsonAsync<CustomerDto>();
            if (created is not null)
            {
                Roles.Add(created);
                Roles = Roles.OrderBy(c => c.Name).ToList();
                newCustomer = new CustomerDto();
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error creating customer: {ex.Message}";
        }
    }

    private void BeginEdit(CustomerDto customer)
    {
        errorMessage = null;
        editCustomer = new CustomerDto
        {
            Id = customer.Id,
            Name = customer.Name
        };
    }

    private void CancelEdit()
    {
        editCustomer = null;
    }

    private async Task SaveEditAsync(int id)
    {
        if (editCustomer is null)
        {
            return;
        }

        try
        {
            errorMessage = null;

            var response = await Http.PutAsJsonAsync($"api/Role/{id}", editCustomer);
            response.EnsureSuccessStatusCode();

            var existing = Roles.First(c => c.Id == id);
            existing.Name = editCustomer.Name;

            Roles = Roles.OrderBy(c => c.Name).ToList();
            editCustomer = null;
        }
        catch (Exception ex)
        {
            errorMessage = $"Error updating customer: {ex.Message}";
        }
    }

    private async Task DeleteCustomerAsync(int id)
    {
        try
        {
            errorMessage = null;

            var response = await Http.DeleteAsync($"api/Role/{id}");
            response.EnsureSuccessStatusCode();

            Roles.RemoveAll(c => c.Id == id);
        }
        catch (Exception ex)
        {
            errorMessage = $"Error deleting customer: {ex.Message}";
        }
    }
}
