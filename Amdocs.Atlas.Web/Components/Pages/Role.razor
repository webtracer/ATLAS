@page "/roles"
@using System.Net.Http.Json
@using Amdocs.Atlas.Core.DTOs
@inject HttpClient Http

<h3>Roles</h3>

@if (!string.IsNullOrWhiteSpace(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}

@if (isLoading)
{
    <p><em>Loading...</em></p>
}
else
{
    <EditForm Model="newRole" OnValidSubmit="CreateRoleAsync">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <label class="form-label">Name</label>
            <InputText class="form-control" @bind-Value="newRole.Name" />
        </div>

        <button type="submit" class="btn btn-primary">Add Role</button>
    </EditForm>

    <hr />

    @if (Roles.Count == 0)
    {
        <p>No Role found.</p>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 60%">Name</th>
                    <th style="width: 40%">Actions</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var role in Roles)
            {
                <tr>
                    <td>
                        @if (editRole?.Id == role.Id)
                        {
                            <InputText class="form-control" @bind-Value="editRole!.Name" />
                        }
                        else
                        {
                            @role.Name
                        }
                    </td>
                    <td>
                        @if (editRole?.Id == role.Id)
                        {
                            <button class="btn btn-sm btn-success me-2" @onclick="() => SaveEditAsync(role.Id)">Save</button>
                            <button class="btn btn-sm btn-secondary" @onclick="CancelEdit">Cancel</button>
                        }
                        else
                        {
                            <button class="btn btn-sm btn-outline-primary me-2" @onclick="() => BeginEdit(role)">Edit</button>
                            <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteRoleAsync(role.Id)">Delete</button>
                        }
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
}

@code {
    //private List<RoleDto> Roles = [];
    private List<RoleDto> Roles = new();
    private RoleDto newRole = new();
    private RoleDto? editRole;
    private bool isLoading = true;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadRoleAsync();
        try
        {
            var result = await Http.GetFromJsonAsync<List<RoleDto>>("api/roles");
            Roles = result ?? new List<RoleDto>();
        }
        catch (HttpRequestException ex)
        {
            errorMessage = $"Error loading Role: {ex.Message}";
        }
    }

    private async Task LoadRoleAsync()
    {
        try
        {
            isLoading = true;
            errorMessage = null;

            var result = await Http.GetFromJsonAsync<List<RoleDto>>("api/Roles");
            Roles = (result ?? []).OrderBy(c => c.Name).ToList();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading Role: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task CreateRoleAsync()
    {
        if (string.IsNullOrWhiteSpace(newRole.Name))
        {
            errorMessage = "Name is required.";
            return;
        }

        try
        {
            errorMessage = null;

            var response = await Http.PostAsJsonAsync("api/Roles", newRole);
            response.EnsureSuccessStatusCode();

            var created = await response.Content.ReadFromJsonAsync<RoleDto>();
            if (created is not null)
            {
                Roles.Add(created);
                Roles = Roles.OrderBy(c => c.Name).ToList();
                newRole = new RoleDto();
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error creating customer: {ex.Message}";
        }
    }

    private void BeginEdit(RoleDto role)
    {
        errorMessage = null;
        editRole = new RoleDto
        {
            Id = role.Id,
            Name = role.Name
        };
    }

    private void CancelEdit()
    {
        editRole = null;
    }

    private async Task SaveEditAsync(int id)
    {
        if (editRole is null)
        {
            return;
        }

        try
        {
            errorMessage = null;

            var response = await Http.PutAsJsonAsync($"api/Roles/{id}", editRole);
            response.EnsureSuccessStatusCode();

            var existing = Roles.First(c => c.Id == id);
            existing.Name = editRole.Name;

            Roles = Roles.OrderBy(c => c.Name).ToList();
            editRole = null;
        }
        catch (Exception ex)
        {
            errorMessage = $"Error updating role: {ex.Message}";
        }
    }

    private async Task DeleteRoleAsync(int id)
    {
        try
        {
            errorMessage = null;

            var response = await Http.DeleteAsync($"api/Roles/{id}");
            response.EnsureSuccessStatusCode();

            Roles.RemoveAll(c => c.Id == id);
        }
        catch (Exception ex)
        {
            errorMessage = $"Error deleting role: {ex.Message}";
        }
    }
}
