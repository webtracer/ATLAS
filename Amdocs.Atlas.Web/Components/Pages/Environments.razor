@page "/environments"
@using System.Net.Http.Json
@using Amdocs.Atlas.Core.DTOs
@inject HttpClient Http

<h3>environments</h3>

@if (!string.IsNullOrWhiteSpace(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}

@if (isLoading)
{
    <p><em>Loading...</em></p>
}
else
{
    <EditForm Model="newenvironment" OnValidSubmit="CreateenvironmentAsync">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <label class="form-label">Name</label>
            <InputText class="form-control" @bind-Value="newenvironment.Name" />
        </div>

        <button type="submit" class="btn btn-primary">Add environment</button>
    </EditForm>

    <hr />

    @if (environments.Count == 0)
    {
        <p>No environments found.</p>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 60%">Name</th>
                    <th style="width: 40%">Actions</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var environment in environments)
            {
                <tr>
                    <td>
                        @if (editenvironment?.Id == environment.Id)
                        {
                            <InputText class="form-control" @bind-Value="editenvironment!.Name" />
                        }
                        else
                        {
                            @environment.Name
                        }
                    </td>
                    <td>
                        @if (editenvironment?.Id == environment.Id)
                        {
                            <button class="btn btn-sm btn-success me-2" @onclick="() => SaveEditAsync(environment.Id)">Save</button>
                            <button class="btn btn-sm btn-secondary" @onclick="CancelEdit">Cancel</button>
                        }
                        else
                        {
                            <button class="btn btn-sm btn-outline-primary me-2" @onclick="() => BeginEdit(environment)">Edit</button>
                            <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteenvironmentAsync(environment.Id)">Delete</button>
                        }
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
}

@code {
    private List<EnvironmentDto> environments = [];
    private EnvironmentDto newenvironment = new();
    private EnvironmentDto? editenvironment;
    private bool isLoading = true;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadenvironmentsAsync();
    }

    private async Task LoadenvironmentsAsync()
    {
        try
        {
            isLoading = true;
            errorMessage = null;

            var result = await Http.GetFromJsonAsync<List<EnvironmentDto>>("api/environments");
            environments = (result ?? []).OrderBy(c => c.Name).ToList();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading environments: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task CreateenvironmentAsync()
    {
        if (string.IsNullOrWhiteSpace(newenvironment.Name))
        {
            errorMessage = "Name is required.";
            return;
        }

        try
        {
            errorMessage = null;

            var response = await Http.PostAsJsonAsync("api/environments", newenvironment);
            response.EnsureSuccessStatusCode();

            var created = await response.Content.ReadFromJsonAsync<EnvironmentDto>();
            if (created is not null)
            {
                environments.Add(created);
                environments = environments.OrderBy(c => c.Name).ToList();
                newenvironment = new EnvironmentDto();
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error creating environment: {ex.Message}";
        }
    }

    private void BeginEdit(EnvironmentDto environment)
    {
        errorMessage = null;
        editenvironment = new EnvironmentDto
        {
            Id = environment.Id,
            Name = environment.Name
        };
    }

    private void CancelEdit()
    {
        editenvironment = null;
    }

    private async Task SaveEditAsync(int id)
    {
        if (editenvironment is null)
        {
            return;
        }

        try
        {
            errorMessage = null;

            var response = await Http.PutAsJsonAsync($"api/environments/{id}", editenvironment);
            response.EnsureSuccessStatusCode();

            var existing = environments.First(c => c.Id == id);
            existing.Name = editenvironment.Name;

            environments = environments.OrderBy(c => c.Name).ToList();
            editenvironment = null;
        }
        catch (Exception ex)
        {
            errorMessage = $"Error updating environment: {ex.Message}";
        }
    }

    private async Task DeleteenvironmentAsync(int id)
    {
        try
        {
            errorMessage = null;

            var response = await Http.DeleteAsync($"api/environments/{id}");
            response.EnsureSuccessStatusCode();

            environments.RemoveAll(c => c.Id == id);
        }
        catch (Exception ex)
        {
            errorMessage = $"Error deleting environment: {ex.Message}";
        }
    }
}
